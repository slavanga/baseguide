{
  "name": "baseguide",
  "description": "Baseguide is a flexible, fluid and fun CSS framework.",
  "version": "4.1.1",
  "keywords": [
    "css",
    "sass",
    "responsive",
    "front-end",
    "framework"
  ],
  "homepage": "https://basegui.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/slavanga/baseguide.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all build watch",
    "build": "npm-run-all sass postcss postcss:minify",
    "watch": "chokidar \"**/*.scss\" -c \"npm run build\"",
    "lint": "stylelint **/*.scss --fix",
    "sass": "sass scss/baseguide.scss dist/baseguide.css",
    "postcss": "postcss dist/baseguide.css --replace",
    "postcss:minify": "postcss dist/baseguide.css --output dist/baseguide.min.css --env=production",
    "prettier": "prettier --write scss/**/*.scss",
    "sassdoc": "sassdoc **/*.scss --config sassdocrc"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-scss": "^4.0.0",
    "prettier": "^2.3.2",
    "sass": "^1.38.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.20.1"
  }
}
